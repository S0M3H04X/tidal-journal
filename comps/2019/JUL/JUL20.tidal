import Sound.Tidal.Drum.Amen as Am

let bd = take (length Am.bd) Am.bd
    sn = take (length Am.sn) Am.sn

setcps (90/60/4)

-- Triplet Swing
d1 $ stack [
    s "hh [hh hh] [~ hh] hh [hh hh] [~ hh]",
    s "~ ~ cp ~ ~ ~ cp ~" |+| n "3 4", 
    s "drek ~ ~ ~ drek ~ ~ [~ drek ~]" |+| n "5 2 3",
    s "~ bass" |+| n "1 3 4" |-| speed "1.2 3"
]

d1 silence

-- Quintuplet Swing

d2 $ stack [
    sound "hh*16",
    sound "bd*4"
]

d2 silence

hush